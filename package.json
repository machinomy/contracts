{
  "name": "@machinomy/contracts",
  "version": "3.1.0",
  "description": "Machinomy contracts managed by Truffle",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "build/",
    "contracts/",
    "helpers/",
    "migrations/",
    "test/",
    "types/",
    "src/"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "support:build": "tsc --project support/tsconfig.json",
    "support:wrap": "yarn support:build && node support/wrap.js 'build/contracts/@(Broker|TokenBroker|BidiBroker|ERC20).json' --output build/wrappers",
    "truffle:test": "run-with-testrpc --networkId 999 --mnemonic 'testtest' --unlock 0 'truffle test ./test/*.test.js'",
    "truffle:migrate": "truffle migrate",
    "truffle:migrate:ropsten": "truffle migrate --network ropsten",
    "test": "yarn run build && yarn run truffle:test",
    "sollint": "solium -d contracts/",
    "prepare": "yarn build && yarn lint",
    "build": "yarn run support:wrap && tsc --project tsconfig.json",
    "lint": "tslint -t stylish --type-check -p '.'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machinomy/machinomy-contracts.git"
  },
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com",
  "contributors": [
    "Alexandr Burtovoy <alexandr.burtovoy@machinomy.com>",
    "David Wolever <david@wolever.net>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/machinomy/machinomy-contracts/issues"
  },
  "homepage": "https://github.com/machinomy/machinomy-contracts#readme",
  "devDependencies": {
    "@machinomy/types-truffle-contract": "https://github.com/machinomy/types-truffle-contract",
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.5",
    "@types/chai-as-promised": "^7.1.0",
    "@types/glob": "^5.0.34",
    "@types/handlebars": "^4.0.36",
    "@types/node": "^8.0.28",
    "chai-as-promised": "^7.1.1",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "run-with-testrpc": "^0.2.1",
    "solium": "^1.0.11",
    "truffle": "^3.2.93",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "types-bn": "^0.0.1",
    "types-ethereumjs-util": "https://github.com/machinomy/types-ethereumjs-util.git",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "buffer": "^5.0.7",
    "chai": "^4.1.2",
    "ethereumjs-abi": "https://github.com/ethereumjs/ethereumjs-abi",
    "ethereumjs-util": "^5.1.2",
    "truffle-contract": "^3.0.0",
    "web3": "^0.20.1",
    "zeppelin-solidity": "^1.2.0"
  }
}
